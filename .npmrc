# Formula PM V3 - NPM Configuration for Windows/OneDrive Optimization
# Fixes Jest worker errors and improves build stability

# Legacy peer dependencies to avoid conflicts
legacy-peer-deps=true

# Network configuration for OneDrive/corporate environments
strict-ssl=false
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Package resolution optimizations
prefer-offline=false
package-lock-only=false

# Registry configuration (fallback to default npm registry)
registry=https://registry.npmjs.org/

# Windows-specific settings
script-shell=powershell
scripts-prepend-node-path=true

# Build optimization
fund=false
audit=false

# Development server optimization
progress=false
loglevel=warn