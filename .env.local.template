# Formula PM V3 Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Supabase URL - Found in your project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key - Found in your project API settings  
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key

# Supabase Service Role Key - Found in your project API settings (KEEP PRIVATE!)
# Used for admin operations and bypassing RLS policies
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key

# ============================================================================
# NEXT.JS CONFIGURATION  
# ============================================================================

# Node environment
NODE_ENV=development

# Application URL - Used for redirects and email links
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# CONSTRUCTION SITE OPTIMIZATIONS
# ============================================================================

# Enable optimizations for poor connectivity environments
NEXT_PUBLIC_OFFLINE_MODE=true

# Connection timeout for construction sites (in milliseconds)
NEXT_PUBLIC_CONNECTION_TIMEOUT=30000

# Enable query caching for construction workflows
NEXT_PUBLIC_ENABLE_QUERY_CACHE=true

# ============================================================================
# AUTHENTICATION SETTINGS
# ============================================================================

# JWT expiry for construction site sessions (longer for field workers)
NEXT_PUBLIC_JWT_EXPIRY=14400

# Enable remember me for shared devices
NEXT_PUBLIC_ENABLE_REMEMBER_ME=true

# ============================================================================
# DEVELOPMENT SETTINGS (Remove in production)
# ============================================================================

# Enable debug logging
NEXT_PUBLIC_DEBUG_MODE=true

# Enable development tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# ============================================================================
# OPTIONAL: FILE STORAGE
# ============================================================================

# Maximum file upload size for drawings/documents (in MB)
NEXT_PUBLIC_MAX_FILE_SIZE=50

# Allowed file types for uploads
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,dwg,jpg,jpeg,png,xlsx,docx